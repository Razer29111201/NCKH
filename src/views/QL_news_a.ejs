<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/grid.css">
    <link rel="stylesheet" href="/css/admin.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <title>Document</title>
</head>

<body>
    <%- include('./partials/header'); %>
        <div class="grid wide">
            <div class="admin">

                <div class="row">
                    <div class="col m-3">
                        <%- include('./partials/sidebar_admin'); %>
                    </div>
                    <div class="col m-9">
                        <div class="title">
                            <h2>Quản Lý Thông Báo</h2>
                        </div>
                        <div class="btn_direc">
                            <button id="add">Thêm </button>
                            <button id="edit">Sửa </button>
                            <form action="/tuyensinh/news/del" id="formdel" method="post">
                                <input type="text " id="idE" name="id" hidden>
                                <button id="del">Xóa </button>
                            </form>
                        </div>
                        <div class="wpaper hiden">
                            <div class="form_ ">

                            </div>
                            <div class="form">
                                <h2 id="form_title">Thêm Tin Tức</h2>
                                <form class="news_add " action="" id="form2" enctype="multipart/form-data"
                                    method="post">
                                    <div class="form_group">
                                        <span>Title:</span>
                                        <input type="text " id="id" name="id" hidden>
                                        <input id="title" type="text" name="title">
                                    </div>
                                    <div class="form_group">
                                        <span> Nội Dung:</span>
                                        <textarea name="editor" id="editor"></textarea>
                                    </div>
                                    <div class="form_group">
                                        <span>Thumb: </span>
                                        <input type="file" name="img">
                                    </div>

                                    <div class="form_group">
                                        <button class="hiden" id="btn_addd">Thêm</button>
                                        <button class="hiden" id="btn_edit">Sửa</button>
                                    </div>


                                </form>
                            </div>
                            <span id="exit">X</span>

                        </div>



                        <table>
                            <tr>
                                <th></th>
                                <th>Hình Ảnh</th>
                                <th>Tiêu đề</th>
                                <th>Nội dung</th>
                                <th>Ngày viết</th>


                            </tr>
                            <% for (var i=0; i < news.length; i++ ) { %>
                                <tr>
                                    <td><input class="checkbox" value=" <%= news[i].id %>" type="checkbox">

                                    </td>
                                    <td>
                                        <div class="Admin_img">
                                            <img src="/<%= news[i].thumb%>" alt="">

                                        </div>
                                    </td>
                                    <td>
                                        <%= news[i].title %>
                                    </td>

                                    <td>
                                        <%- news[i].content%>
                                    </td>

                                    <td>
                                        <%= news[i].date%>
                                    </td>



                                </tr>
                                <% } %>
                        </table>
                    </div>

                </div>

            </div>
        </div>

        <%- include('./partials/footer'); %>
            <script src="/js/ck.js"></script>
            <script src="/js/news_a.js"> </script>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
            <script src="/js/index.js"> </script>
</body>

</html>