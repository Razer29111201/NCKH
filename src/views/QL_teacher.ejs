<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/grid.css">
    <link rel="stylesheet" href="/css/admin.css">
    <title>Document</title>
</head>

<body>
    <%- include('./partials/header'); %>
        <div class="grid wide">
            <div class="admin">

                <div class="row">
                    <div class="col m-3">
                        <div class="admin__left">
                            <div class="menu">
                                <ul class="menu_list">
                                    <li class="menu_item active">
                                        <i class='bx bx-home'></i>
                                        Trang Chủ Admin
                                    </li>
                                    <li class="menu_item">
                                        <i class='bx bx-user'></i>
                                        Quản Lý Tài Khoản
                                    </li>
                                    <li class="menu_item">
                                        <i class='bx bx-list-ul'></i>
                                        Quản Lý Sản Phẩm
                                    </li>
                                    <li class="menu_item">
                                        <i class='bx bx-slideshow'></i>
                                        Quản Lý Tin Tức
                                    </li>
                                    <li class="menu_item">
                                        <i class='bx bx-news'></i>
                                        Quản Lý Đơn Hàng
                                    </li>


                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col m-9">
                        <div class="title">
                            <h2>Quản Lý Thông Báo</h2>
                        </div>
                        <div class="btn_direc">
                            <button id="add">Thêm </button>
                            <button id="edit">Sửa </button>
                            <form action="/teacher/del" id="formdel" method="post">
                                <input type="text " id="idE" name="id" hidden>
                                <button id="del">Xóa </button>
                            </form>
                        </div>
                        <div class="wpaper hiden">
                            <div class="form_ ">

                            </div>
                            <div class="form">
                                <h2 id="form_title">Thêm Tin Tức</h2>
                                <form class="news_add " action="" id="form2" method="post">
                                    <div class="form_group">
                                        <span>Họ Tên:</span>
                                        <input type="text " id="id" name="id" hidden>
                                        <input id="title" type="text" name="name">
                                    </div>
                                    <div class="form_group">
                                        <span>Số Điện Thoại:</span>
                                        <input id="title" type="text" name="title">
                                    </div>
                                    <div class="form_group">
                                        <span>Thumb: </span>
                                        <input type="file" name="img">
                                    </div>
                                    <div class="form_group">
                                        <span> Địa Chỉ:</span>
                                        <input id="title" type="text" name="address">
                                    </div>
                                    <div class="form_group">
                                        <span> Vị Trí:</span>
                                        <input id="title" type="text" name="position">
                                    </div>
                                    <div class="form_group">
                                        <button class="hiden" id="btn_addd">Thêm</button>
                                        <button class="hiden" id="btn_edit">Sửa</button>
                                    </div>


                                </form>
                            </div>
                            <span id="exit">X</span>

                        </div>



                        <table>
                            <tr>
                                <th></th>
                                <th>Hình Ảnh</th>
                                <th>Tên</th>
                                <th>Ngày Sinh</th>
                                <th>SĐT</th>
                                <th>Địa Chỉ</th>
                                <th>Vị Trí</th>

                            </tr>
                            <% for (var i=0; i < teacher.length; i++ ) { %>
                                <tr>
                                    <td><input class="checkbox" value=" <%= teacher[i].id %>" type="checkbox">

                                    </td>
                                    <td>
                                        <div class="Admin_img">

                                            <%= teacher[i].img %>
                                        </div>
                                    </td>
                                    <td>
                                        <%= teacher[i].name %>
                                    </td>

                                    <td>
                                        <%= teacher[i].brith%>
                                    </td>
                                    <td>
                                        <%= teacher[i].phone %>
                                    </td>
                                    <td>


                                        <%- teacher[i].address %>

                                    </td>
                                    <td>
                                        <%= teacher[i].position %>
                                    </td>



                                </tr>
                                <% } %>
                        </table>
                    </div>

                </div>

            </div>

            <%- include('./partials/footer'); %>s
                <script src="/js/ck.js"></script>
                <script src="/js/teacher.js"> </script>
</body>

</html>