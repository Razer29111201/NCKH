<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <link rel="stylesheet" href="/css/admin_css.css">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/grid.css">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <title>Document</title>
</head>

<body>
    <div class="container">
        <%- include('../partials/sidebar_admin_news'); %>
            <div class="flex_1">
                <div>

                    <%- include('../partials/header_admin'); %>

                        <div class="content">
                            <div class="body_title">
                                <h3>Banner</h3>
                            </div>
                            <div class="content_body">

                                <div class="body_btn-add">
                                    <a id="adda">
                                        <i class="fa-solid fa-plus"></i>
                                        Thêm Tin Tức
                                    </a>

                                </div>
                                <div class="wpaper hiden">
                                    <div class="form_ ">

                                    </div>
                                    <div class="form">
                                        <h2 id="form_title">Thêm Tin Tức</h2>
                                        <form class="news_add " id="form" action="" method="post"
                                            enctype="multipart/form-data">
                                            <div class="form_group">
                                                <span>Tiêu Đề:</span>
                                                <input type="text " id="id" name="id" hidden>
                                                <input id="title" type="text" name="title" required>
                                            </div>
                                            <div class="form_group">
                                                <span>Hình Ảnh: </span>
                                                <input type="file" name="img" required>
                                            </div>
                                            <div class="form_group">
                                                <span>Link:</span>
                                                <input id="link" type="text" name="link" required>
                                            </div>


                                            <div class="form_group">
                                                <button class="hiden" id="btn_addd">Thêm</button>
                                                <button class="hiden" id="btn_edit">Sửa</button>
                                            </div>


                                        </form>
                                    </div>
                                    <span id="exit">X</span>

                                </div>
                                <div class="content_table">
                                    <table id="newsTable">
                                        <thead>
                                            <tr>
                                                <th>
                                                    <div>STT</div>
                                                </th>
                                                <th>Tiêu Đề</th>
                                                <th>
                                                    <div>Hình Ảnh</div>
                                                </th>
                                                <th>Ngày Tạo</th>
                                                <th></th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (var i=0; i < data.length; i++ ) { %>
                                                <tr id="col<%= data[i].id %>">
                                                    <td>
                                                        <%= data[i].id %>
                                                    </td>

                                                    <td>
                                                        <%= data[i].title %>
                                                    </td>
                                                    <td
                                                        style=" width: 300px; max-width: 300px; display: flex; justify-content: center; ">
                                                        <div class="image">
                                                            <img src="<%= data[i].image %>" alt="">
                                                        </div>

                                                    </td>
                                                    <td style="max-width: 250px;
                                                    width: 250px;">
                                                        <%= data[i].date %>
                                                    </td>
                                                    <td><button class=" btn_table  editButton">Sửa</button></td>
                                                    <td><button class=" btn_table  deleteButton">Xóa</button></td>

                                                </tr>
                                                <% } %>
                                                    <!-- Thêm các dòng tin tức khác tại đây -->
                                        </tbody>
                                    </table>
                                </div>

                            </div>

                        </div>
                </div>
            </div>


    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>



        const btn_del = document.querySelectorAll('.deleteButton')
        btn_del.forEach(item => {
            item.onclick = () => {
                var tr = item.parentNode.parentNode
                var listtd = tr.querySelectorAll('td')
                const id = listtd[0].outerText
                $.ajax({
                    url: '/news/banner/del',
                    type: 'POST',
                    data: {
                        id: id

                    },
                    success: function (data) {
                        window.location.href = '/admin/banner'
                    },
                    error: function (xhr, status, error) {




                    }

                }
                )

            }
        })
    </script>
    <script src="/js/ck.js"></script>

    <script src="/js/admin_js.js"> </script>
    <script src="/js/admin.js"> </script>


</body>

</html>