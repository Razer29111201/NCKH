<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <link rel="stylesheet" href="/css/news/index.css">
    <link rel="stylesheet" href="/css/grid.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <title>Document</title>
</head>

<body>
    <div class="container">
        <%- include('../partials/sidebar_admin_news'); %>
            <div class="flex_1">
                <div>

                    <%- include('../partials/header_admin'); %>

                        <div class="card">
                            <div class="card-body">
                                <div class="body_title">
                                    <h3>Nhóm tin</h3>
                                </div>
                                <div class="row">
                                    <div class="col m-6 padding-20">
                                        <form action="/news/group/add" id="form_" class="form_add" method="post">
                                            <div class="form-group">
                                                <label for="title">Tên Nhóm Tin:</label>
                                                <input type="text" name="id" hidden id="id">
                                                <input type="text" id="title" name="name" required>
                                            </div>

                                            <div class="form-group">
                                                <label for="summary">Id Nhóm Tin:</label>
                                                <input id="summary" name="idgr" required></input>
                                            </div>
                                            <div class="form-group">

                                                <input type="submit" id="btn" value="Thêm"></input>

                                            </div>
                                        </form>
                                    </div>
                                    <div class="col m-6 padding-20">
                                        <div class="content_table">
                                            <table id="newsTable">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            <div>STT</div>
                                                        </th>
                                                        <th>
                                                            <div>Tên Nhóm Tin</div>
                                                        </th>
                                                        <th>
                                                            <div>ID Nhóm Tin</div>
                                                        </th>
                                                        <th></th>
                                                        <th></th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for (var i=0; i < data.length; i++ ) { %>
                                                        <tr>
                                                            <td>
                                                                <%= data[i].id %>
                                                            </td>
                                                            <td>
                                                                <%= data[i].name %>
                                                            </td>
                                                            <td>
                                                                <%= data[i].idng %>
                                                            </td>
                                                            <td><button class="btn_table btn_edit">Sửa</button></td>
                                                            <td><button class="btn_table btn_del">Xóa</button></td>

                                                        </tr>
                                                        <% } %>


                                                            <!-- Thêm các dòng tin tức khác tại đây -->
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
            </div>


    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <script src="/js/ck.js"></script>
    <script src="/js/news/newsgroup.js"> </script>
    <script src="/js/admin_js.js"> </script>

    <script src="/js/index.js"> </script>
</body>

</html>