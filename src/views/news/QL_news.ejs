<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <link rel="stylesheet" href="/css/admin_css.css">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/grid.css">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <title>Document</title>
</head>

<body>
    <div class="container">
        <%- include('../partials/sidebar_admin_news'); %>

            <div class="flex_1">
                <div>
                    <%- include('../partials/header_admin'); %>

                        <div class="content">
                            <div class="body_title">
                                <h3>Tin Tức</h3>
                            </div>
                            <div class="content_body">

                                <div class="body_btn-add">
                                    <a href="/admin/add_news">
                                        <i class="fa-solid fa-plus"></i>
                                        Thêm Tin Tức
                                    </a>
                                </div>
                                <div class="btn_list body_btn-add">
                                    <a class="btn_status active">

                                        Đã Đăng
                                    </a>
                                    <a class="btn_status">

                                        Đang Chờ Duyệt
                                    </a>
                                </div>
                                <div class="content_table">
                                    <table id="newsTable">
                                        <thead>
                                            <tr>
                                                <th>
                                                    <div>STT</div>
                                                </th>
                                                <th>
                                                    <div>Tiêu Đề</div>
                                                </th>
                                                <th>Tác Giả</th>
                                                <th>Ngày Viết</th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (var i=0; i < news.length; i++ ) { %>
                                                <tr id="col<%= news[i].id %>">
                                                    <td>
                                                        <%= news[i].id %>
                                                    </td>
                                                    <td>
                                                        <%= news[i].title %>
                                                    </td>
                                                    <td>
                                                        <%= news[i].author %>
                                                    </td>
                                                    <td>
                                                        <%= news[i].date %>
                                                    </td>
                                                    <td><a class="btn_table " href="/news/<%= news[i].id %>">Detail</a>
                                                    </td>
                                                    <td> <a href="/news/editnews/<%= news[i].id %>"><button
                                                                class="btn_table editButton">Sửa</button></a> </td>
                                                    <td><button class=" btn_table  deleteButton">Xóa</button></td>
                                                    <% if ( news[i].status==1 ) { %>
                                                        <td><input type="checkbox" name="" id=""></td>

                                                        <% } %>
                                                            <% if ( news[i].status==0 ) { %>
                                                                <td><input type="checkbox" checked name="" id="">
                                                                </td>

                                                                <% } %>
                                                </tr>
                                                <% } %>
                                                    <!-- Thêm các dòng tin tức khác tại đây -->
                                        </tbody>
                                    </table>
                                </div>
                                <div class="content_table hiden">
                                    <table id="newsTable">
                                        <thead>
                                            <tr>
                                                <th>
                                                    <div>STT</div>
                                                </th>
                                                <th>
                                                    <div>Tiêu Đề</div>
                                                </th>
                                                <th>Tác Giả</th>
                                                <th>Ngày Viết</th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (var i=0; i < unnews.length; i++ ) { %>
                                                <tr id="col<%= unnews[i].id %>" class="opacity">
                                                    <td>
                                                        <%= unnews[i].id %>
                                                    </td>
                                                    <td>
                                                        <%= unnews[i].title %>
                                                    </td>
                                                    <td>
                                                        <%= unnews[i].author %>
                                                    </td>
                                                    <td>
                                                        <%= unnews[i].date %>

                                                    </td>
                                                    <% if ( role==1 ) { %>

                                                        <td><button class="  btn_table btnD">Duyệt</button>
                                                        </td>
                                                        <% } %>
                                                            <td><a class="btn_table "
                                                                    href="/news/<%= unnews[i].id %>">Detail</a></td>
                                                            <td> <a href="/news/editnews/<%= unnews[i].id %>"><button
                                                                        class="btn_table editButton">Sửa</button></a>
                                                            </td>
                                                            <td><button class=" btn_table  deleteButton">Xóa</button>
                                                            </td>
                                                            <% if ( unnews[i].status==1 ) { %>
                                                                <td><input type="checkbox" name="" id=""></td>

                                                                <% } %>
                                                                    <% if ( unnews[i].status==0 ) { %>
                                                                        <td><input type="checkbox" checked name=""
                                                                                id="">
                                                                        </td>

                                                                        <% } %>

                                                </tr>
                                                <% } %>
                                                    <!-- Thêm các dòng tin tức khác tại đây -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                </div>
            </div>


    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>



        const btn_del = document.querySelectorAll('.deleteButton')
        btn_del.forEach(item => {
            item.onclick = () => {
                var tr = item.parentNode.parentNode
                var listtd = tr.querySelectorAll('td')
                const id = listtd[0].outerText
                $.ajax({
                    url: '/news/del',
                    type: 'POST',
                    data: {
                        id: id

                    },
                    success: function (data) {
                        window.location.href = '/admin/2'
                    },
                    error: function (xhr, status, error) {
                    }

                }
                )

            }
        })
        const btnAccept = document.querySelectorAll(".btnD")

        btnAccept.forEach(item => {
            item.onclick = () => {
                console.log("a");
                var tr = item.parentNode.parentNode
                var listtd = tr.querySelectorAll('td')
                const id = listtd[0].outerText
                const title = listtd[1].outerText
                $.ajax({
                    url: '/news/accept',
                    type: 'POST',
                    data: {
                        id: id,
                        title: title

                    },
                    success: function (data) {
                        window.location.href = '/admin/2'
                    },
                    error: function (xhr, status, error) {
                    }

                }
                )
            }
        })
    </script>
    <script src="/js/ck.js"></script>
    <script src="/js/noti.js"> </script>
    <script src="/js/index.js"> </script>
    <script src="/js/admin_js.js"> </script>
</body>

</html>