<header>
    <div class="login_form hiden">
        <div class="modal">
        </div>
        <div class="modal-login">
            <div class="header-login">
                <h4>Đăng Nhập</h4>
                <i class='bx bx-x'></i>
            </div>
            <form class="body-login" id="form" method="post" action="/user">
                <div class="login-form">
                    <i></i>
                    <input type="text" name="login" placeholder="Nhập Vào usename">
                    <div class="err"></div>
                </div>
                <div class="login-form">
                    <input type="password" name="password" placeholder="Password">
                    <div class="err"></div>
                </div>
                <div class="body-btn">
                    <button class="login_submid">Đăng Nhập</button>
                </div>
            </form>

            <p class="body-register">Bạn Chưa Có Tài Khoản???<a href="./register.html">Đăng Ký</a></p>




        </div>
    </div>
    <div class="grid wide">
        <div class="header_top">
            <div class="login">
                <button id="btn_login"> Đăng Nhập</button>
                <div class="nav--login-suss hidden">
                    <i class='bx bx-user-circle'></i>
                    <span id="name_login"></span>
                    <i class='bx bx-chevron-down'></i>
                    <ul class="login__drop">
                        <li>Thông Tin Tài Khoản</li>
                        <li><a href="/cart/order">Đơn Mua</a></li>
                        <div id="admin">

                        </div>

                        <a href="/">
                            <li id="logout">Đăng Xuất</li>
                        </a>
                    </ul>
                </div>
            </div>
            <div class="header_search">

                <input type="text" placeholder="Tìm Kiếm....">
            </div>
        </div>
        <div class="header_drop">
            <ul class="drop_list">
                <li class="drop_item">
                    <a href=""><i class="fa-solid fa-house"></i></a>
                </li>
                <% for (var i=0; i < data.length; i++) { %>
                    <li class="drop_item"><a href="<%= data[i].link %>">

                            <%= data[i].name %>

                        </a></li>
                    <% } %>
            </ul>
        </div>
    </div>
</header>