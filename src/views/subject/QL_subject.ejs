<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <link rel="stylesheet" href="/css/news/index.css">
    <link rel="stylesheet" href="/css/subject/subject.css">
    <link rel="stylesheet" href="/css/grid.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <title>Document</title>
</head>

<body>
    <div class="container">
        <div class="form_addSub hiden">
            <div class="modal">
            </div>
            <div class="modal_form">
                <h3 id="form_title">Thêm môn học</h3>
                <form id="form_sub" class="form_add" method="post">
                    <div class="form-group">
                        <label for="title">Tên Nhóm Tin:</label>
                        <input type="text" name="id" hidden id="id">
                        <input type="text" id="title" name="name" required>
                    </div>

                    <div class="form-group">
                        <label for="summary">Id Nhóm Tin:</label>
                        <select name="group" id="link">
                            <% for (var i=0; i < subject_group.length; i++ ) { %>
                                <option value="<%= subject_group[i].id %>">
                                    <%= subject_group[i].name %>
                                </option>
                                <% } %>
                        </select>
                    </div>
                    <div class="form-group">

                        <input type="submit" class="hiden" id="btn_addd" value="Thêm"></input>
                        <input type="submit" class="hiden" id="btn_edit" value="Lưu thay đổi"></input>

                    </div>
                </form>
            </div>



        </div>

        <div class="form_addSub subdetail hiden ">
            <div class="modal modal_info">
            </div>
            <div class="modal_form_info modal_form">
                <h3 id="form_title">Thêm môn học</h3>
                <form id="form_subdetail" class="form_add" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title">Tên môn học:</label>
                        <input type="text" name="idDetail" hidden id="idDetail">
                        <input type="text" id="titleDetail" name="titleDetail" readonly>
                    </div>
                    <div class="form-group">
                        <label for="title">Slogan:</label>

                        <input type="text" id="slogan" name="slogan" required>
                    </div>
                    <div class="form-group">
                        <label for="title">Giá gốc:</label>

                        <input type="number" id="price" name="price" required>
                    </div>
                    <div class="form-group">
                        <label for="title">Giản giá(%):</label>

                        <input type="number" id="sale" name="sale" required>
                    </div>
                    <div class="form-group">
                        <label for="title">Tóm tắt:</label>

                        <input type="text" id="tomtat" name="tomat" required>
                    </div>
                    <div class="form-group">
                        <label for="content">Mô tả:</label>
                        <div class="scroll">
                            <textarea id="content" name="content"></textarea>

                        </div>
                    </div>


                    <div class="form-group">

                        <label for="image">Hình ảnh:</label>

                        <input type="file" id="image" name="img" accept="image/*" required>


                    </div>
                    <div class="form-group">

                        <input type="submit" class="hiden" id="btn_add_detail" value="Thêm"></input>
                        <input type="submit" class="hiden" id="btn_edit_detail" value="Lưu thay đổi"></input>

                    </div>
                </form>
            </div>



        </div>
        <%- include('../partials/sidebar_admin_news'); %>
            <div class="flex_1">
                <div>

                    <%- include('../partials/header_admin'); %>

                        <div class="card">
                            <div class="card-body">
                                <div class="body_title">
                                    <h3>Môn Học</h3>
                                </div>
                                <div class="row">
                                    <div class="col m-6 padding-20">


                                        <div class="subject_select">
                                            <select name="" id="select_choise">
                                                <% for (var i=0; i < subject.length; i++ ) { %>
                                                    <option value=" <%= subject[i].id %>">
                                                        <%= subject[i].name %>
                                                    </option>
                                                    <% } %>
                                            </select>
                                        </div>
                                        <div class="subject_info">
                                            <div class="subject_header">
                                                <div class="subject_btn absolute_btn">
                                                    <button id="editDetail" class="btn_table hiden">Chỉnh sửa?</button>
                                                    <button id="addDetail" class="btn_table hiden">Thêm dữ
                                                        liệu?</button>
                                                </div>
                                                <div class="subject_img">
                                                    <img src="https://hocmonviet.edu.vn/wp-content/uploads/2018/05/anh-bai-khoa-hoc-nau-an-cho-tre-em-hoc-mon-viet.png"
                                                        alt="">
                                                </div>
                                                <div class="subject_title">
                                                    <div class="subject_info_title">
                                                        <h3></h3>
                                                    </div>
                                                    <div class="subject_price">
                                                        <div class="subject_price_sale">

                                                        </div>
                                                        <div class="subject_price_real">

                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="subject_sologan">
                                                <p></p>
                                            </div>
                                            <div class="subject_tomtat">
                                                <p></p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col m-6 padding-20">
                                        <div class="content_table">
                                            <div class="subject_btn btn_addSubject">
                                                <button class="btn_table" id="adda">Thêm môn học</button>
                                            </div>
                                            <table id="newsTable">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            <div>STT</div>
                                                        </th>
                                                        <th>
                                                            <div>Tên Môn Học</div>
                                                        </th>
                                                        <th>
                                                            <div>ID Môn Học</div>
                                                        </th>
                                                        <th></th>
                                                        <th></th>

                                                    </tr>
                                                </thead>

                                                <tbody>
                                                    <% for (var i=0; i < subject.length; i++ ) { %>
                                                        <tr>
                                                            <td>
                                                                <%= subject[i].id %>
                                                            </td>
                                                            <td>
                                                                <%= subject[i].name %>
                                                            </td>
                                                            <td>
                                                                <%= subject[i].id_sbjgroup %>
                                                            </td>
                                                            <td><button class="btn_table btn_editt">Sửa</button></td>
                                                            <td><button class="btn_table btn_del">Xóa</button></td>

                                                        </tr>
                                                        <% } %>


                                                            <!-- Thêm các dòng tin tức khác tại đây -->
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
            </div>


    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <script src="/js/ck.js"></script>
    <script src="/js/subject.js"> </script>
    <script src="/js/admin_js.js"> </script>

    <script src="/js/index.js"> </script>
</body>

</html>