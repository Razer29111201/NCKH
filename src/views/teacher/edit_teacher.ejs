<body>
    <div class="container">
        <%- include('../partials/sidebar_admin_news'); %>
            <div class="flex_1">
                <div>

                    <%- include('../partials/header_admin'); %>

                        <div class="content">

                            <div class="content_body">
                                <div class="card">
                                    <div class="card-body">

                                        <div class="body_title">
                                            <h3>Cập Nhật Giáo Viên</h3>
                                        </div>
                                        <form class="form_add" enctype="multipart/form-data" action="/teacher/update"
                                            id="form_add" method="post">
                                            <div class="form-group">
                                                <span>Họ Tên:</span>
                                                <input type="text " value="<%= teacher.id%>" id="id" name="id" hidden>
                                                <input id="title" type="text" value="<%= teacher.name %>" name="name">
                                            </div>
                                            <div class="form-group">
                                                <span>Số Điện Thoại:</span>
                                                <input id="sdt" type="text" value="<%= teacher.phone %>" name="title">
                                            </div>
                                            <div class="form-group">
                                                <span>Ngày sinh:</span>
                                                <input id="date" type="date" value="<%= brith_date %>" name="date">
                                            </div>
                                            <div class="form-group">
                                                <span>Thumb: </span>
                                                <input type="file" name="img">
                                            </div>
                                            <div class="form-group">
                                                <span> Địa Chỉ:</span>
                                                <input id="address" type="text" value="<%= teacher.address %>"
                                                    name="address">
                                            </div>
                                            <div class="form-group">
                                                <span> Vị Trí:</span>
                                                <input id="position" type="text" value="<%= teacher.position %>"
                                                    name="position">
                                            </div>
                                            <div class="form-group">
                                                <span> Mail:</span>
                                                <input id="mail" type="mail" value="<%= teacher.email %>" name="mail">
                                            </div>

                                            <div class="form-group">
                                                <span> Chức vụ:</span>
                                                <select name="gt" id="gt">
                                                    <% for (var i=0; i < gt.length; i++ ) { %>
                                                        <option value="<%= gt[i].id %>">
                                                            <%= gt[i].name %>
                                                        </option>
                                                        <% } %>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <input type="submit" id="btn" value="Lưu thay đổi">

                                            </div>


                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
            </div>


    </div>

