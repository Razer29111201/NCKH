    <script>
        document.getElementById("form_add").addEventListener("submit", function (event) {
            // Hiển thị cửa sổ xác nhận
            var isConfirmed = confirm("Bạn chắc chắn muốn thêm tin tức?");

            // Kiểm tra xem người dùng đã xác nhận hay không
            if (!isConfirmed) {
                // Nếu không xác nhận, ngăn chặn việc submit form
                event.preventDefault();
            }
        });





